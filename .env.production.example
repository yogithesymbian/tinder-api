# Production Environment Configuration for Render.com
# Copy these to your Render environment variables

APP_NAME="Tinder API"
APP_ENV=production
APP_KEY=                                    # Will be auto-generated by Render
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com # Replace with your Render URL
L5_SWAGGER_CONST_HOST=https://your-app-name.onrender.com

# These are automatically generated by build script
L5_SWAGGER_GENERATE_ALWAYS=false

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# PostgreSQL Database - Provided by Render
DB_CONNECTION=pgsql
DB_HOST=                                    # Auto-filled by Render from database
DB_PORT=5432                                # Auto-filled by Render from database
DB_DATABASE=                                # Auto-filled by Render from database
DB_USERNAME=                                # Auto-filled by Render from database
DB_PASSWORD=                                # Auto-filled by Render from database

# Session, Cache, and Queue using Database
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Mail Configuration (Optional - configure if needed)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis is not available on free tier
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# AWS (Optional - configure if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
